<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonoappdefinitivo"
    tools:context=".Main106Activity">

    <ImageView
        android:layout_width="151dp"
        android:layout_height="136dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/hombre"
        app:layout_constraintBottom_toTopOf="@+id/principiante"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="151dp"
        android:layout_height="136dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="479dp"
        android:background="@drawable/botonmujer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageButton
        android:id="@+id/principiante"
        android:layout_width="167dp"
        android:layout_height="55dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/principiante"
        android:onClick="Siguiente"
        app:layout_constraintBottom_toTopOf="@+id/intermedio"
        app:layout_constraintStart_toStartOf="parent">

    </ImageButton>

    <ImageButton
        android:id="@+id/intermedio"
        android:layout_width="167dp"
        android:layout_height="55dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/intermedio"
        app:layout_constraintBottom_toTopOf="@+id/avanzado"
        app:layout_constraintStart_toStartOf="parent">

    </ImageButton>

    <ImageButton
        android:id="@+id/avanzado"
        android:layout_width="167dp"
        android:layout_height="55dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="232dp"
        android:background="@drawable/avanzado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>